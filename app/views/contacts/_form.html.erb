<h3>Add Contact</h3>

<%= form_for [@company, @contact] do |f| %>
  <p>
    <%= f.label :name  %>
    <%=  f.text_field :name%>

    <%= f.label :position  %>
    <%=  f.text_field :position%>

    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>
